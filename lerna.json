{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "version": "independent",
  "useWorkspaces": true,
  "npmClient": "yarn",
  "command": {
    "publish": {
      "conventionalCommits": true,
      "message": "chore(release): publish",
      "ignoreChanges": ["**/__tests__/**, **/*.md"],
      "registry": "https://npm.pkg.github.com",
      "allowBranch": "master"
    },
    "version": {
      "message": "chore(release): publish",
      "ignoreChanges": ["**/__tests__/**, **/*.md"],
      "allowBranch": "master"
    }
  }
}
