{
  "name": "lerna-npm",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "commit": "cz",
    "test:all": "lerna run test",
    "ci:test": "lerna run test --since",
    "ci:build": "lerna run build --since",
    "ci:install": "yarn install --frozen-lockfile",
    "ci:version": "lerna version --conventional-commits --yes",
    "ci:publish": "lerna publish -y"
  },
  "devDependencies": {
    "@babel/cli": "^7.13.14",
    "commitizen": "^4.2.3",
    "cz-conventional-changelog": "^3.3.0",
    "enzyme": "^3.11.0",
    "eslint": "^7.24.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lerna": "^4.0.0",
    "lint-staged": "^10.5.4",
    "postcss-cli": "^5.0.1",
    "prettier": "^2.2.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-test-renderer": "^17.0.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.45.2"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./**/*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
